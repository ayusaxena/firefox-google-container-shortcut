{
  "manifest_version": 2,
  "name": "Google Container Shortcut",
  "version": "1.2",
  "description": "Open Google containers using a dedicated button or a keyboard shortcut.",
  "applications": {
    "gecko": {
      "id": "firefox.google.container.shortcut@ayusaxena.com"
    }
  },
  "icons": {
    "48": "assets/icon.png"
  },
  "options_ui": {
    "browser_style": true,
    "page": "options.html"
  },
  "permissions": [
    "tabs",
    "contextualIdentities",
    "cookies",
    "storage",
    "webRequest",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "open-google-container": {
      "suggested_key": {
        "default": "Ctrl+Y",
        "mac": "Command+Y"
      },
      "description": "Open a tab in the Google container"
    }
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "assets/icon.png",
      "32": "assets/icon.png"
    }
  }
}
